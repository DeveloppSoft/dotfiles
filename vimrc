syntax on
set number
set ruler
set showmode
set title

filetype indent on
filetype plugin on

set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab
set autoindent

set cursorline

set showmatch
set incsearch
set hlsearch

set showcmd
set nocompatible
set wildmenu

set encoding=UTF-8

set autoread

set noerrorbells " Shut your mouth

set ttyfast " Optimize for fast coonections

set backupdir=~/.vim/backups
set directory=~/.vim/swaps
set undodir=~/.vim/undo

set backupskip=/tmp/*,/private/tmp/* " Don't backup this
